{
  "name": "lerna-circleci-example1",
  "version": "0.1.1",
  "private": false,
  "files": [
    "lib",
    "build",
    "css",
    "assets"
  ],
  "main": "lib/index.js",
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "flow-coverage": "flow coverage",
