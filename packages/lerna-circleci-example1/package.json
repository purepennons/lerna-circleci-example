    "flow-status": "flow status",
    "flow-stop": "flow stop",
    "husky:precommit": "npm run lint && npm run stylelint && npm run flow-status",
    "lib": "NODE_ENV=production babel src/react-component-node-modules --out-dir lib --copy-files",
